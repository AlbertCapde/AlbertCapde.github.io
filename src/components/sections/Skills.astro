---
import Section from "../Section.astro"

import { skills } from "@cv"
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: rgba(0, 0, 0, 0.75);
    color: #fff;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.22rem 0.6rem;
  }

  li:hover {
    background: rgba(0, 0, 0, 0.4);
  }
</style>